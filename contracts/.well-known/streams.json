      "topic": "metrics.cpu",
      "transport": "sse",
      "schema": { "type": "number" },
      "hints": {
        "reducer": "replace",
        "resume_param": "since",
        "lease": { "ms": 15000 }
      }
    },
    {
      "topic": "chat.{room_id}.events",
      "transport": "ws",
